
"
" Basic editor settings
"
    set t_Co=256

    syntax on
    colorscheme wombat256mod

    filetype plugin indent on

    set autoread
    set autoindent
    set backspace=indent,eol,start
    set complete-=i
    set cursorline
    set expandtab
    set hidden
    set hls
    set ignorecase
    set incsearch
    set mouse=
    set nocompatible
    set nofoldenable
    set nu
    set pastetoggle=<F10>
    set ruler
    set shiftround
    set shortmess+=a
    set smartcase
    set smartindent
    set smarttab
    set sw=4
    set ts=4
    set sts=4
    set vb t_vb=
    set modeline
    set tags+=.ctags.tags

"
" Basic editor bindings
"
    let mapleader = ","

    nmap <Leader>bq :qa<cr>
    nmap <Leader>bd :bd<cr>
    nmap <silent> <Leader>cs :let @/ = ""<cr>

    nmap <c-p> :bp<cr>
    nmap <c-n> :bn<cr>

    nmap <c-h> <c-w>h
    nmap <c-l> <c-w>l
    nmap <c-j> <c-w>j
    nmap <c-k> <c-w>k
    nmap <c-q> <c-w>q

    map <silent> <Leader>wb :%s:\v\s+$::<cr>

"
" C include path
"
    set path+=$HOME/usr/include
    let g:syntastic_c_include_dirs = [$HOME.'/usr/include']

"
" Pathogen
"
    runtime bundle/vim-pathogen/autoload/pathogen.vim
    execute pathogen#infect()

"
" silver searcher
"
    nnoremap <Leader>ag :Ag <cword><cr>

"
" format xml
"
    map <silent> <Leader>xf !xmllint --format -<cr>

"
" Show tabs and spaces when listchars is on
"
    nmap <leader>is :set list!<CR>
    set listchars=tab:▸\ ,space:.
    hi SpecialKey ctermfg=241 ctermbg=234 guifg=#e3e0d7 guibg=#242424

"
" instant-markdown
"
    let g:instant_markdown_autostart = 0
    map <silent> <Leader>mp :InstantMarkdownPreview<cr>

"
" CtrlP
"
    let g:ctrlp_map = ''
    let g:ctrlp_match_window_reversed = 0
    " let g:ctrlp_working_path_mode = 'w'
    let g:ctrlp_by_filename = 0
    let g:ctrlp_user_command = {
      \ 'types': {
        \ 1: [
        \     '.git',
        \     'cd %s && git ls-files . --cached --exclude-standard --others'
        \    ],
        \ 2: ['.hg', 'hg --cwd %s locate -I .'],
        \ 3: [
        \     '.svn',
        \     expand('<sfile>:p:h').'/tools/ctrlp_svn_user_command %s'
        \    ],
      \ },
      \ 'fallback':
      \     expand('<sfile>:p:h').'/tools/ctrlp_fallback_user_command %s'
    \ }
    nnoremap <Leader>bf :CtrlP<cr>
    nnoremap <Leader>bb :CtrlPBuffer<cr>
    nnoremap <Leader>bt :CtrlPTag<cr>

"
